<mah:MetroWindow x:Class="CloudSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cb="clr-namespace:CloudSync.Behaviors"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:models="clr-namespace:CloudSync.Models"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Cloud Data Sync Tool" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.Resources>
        <!-- TODO: Make data structure hierarchical. -->
        <HierarchicalDataTemplate DataType="{x:Type models:TableList}" ItemsSource="{Binding TableNames, Mode=TwoWay}">
            <TextBlock Text="{Binding SchemaName, Mode=TwoWay}"/>
        </HierarchicalDataTemplate>
    </mah:MetroWindow.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Source Database" mah:ControlsHelper.ContentCharacterCasing="Normal" Margin="5">
            <!-- TODO: Support multiSelect -->
            <TreeView>
                <i:Interaction.Behaviors>
                    <cb:TreeViewBehavior SelectedItem="{Binding CurTable, Mode=TwoWay}"/>
                </i:Interaction.Behaviors>
                <TreeViewItem Header="{Binding SrcName, Mode=TwoWay}" ItemsSource="{Binding SrcTables, Mode=TwoWay}"/>
            </TreeView>
        </GroupBox>
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                <Button Content="Copy" FontSize ="15" Margin="0,0,0,10" Command="{Binding CopyCommand}"/>
                <Button Margin="0,0,0,10" Command="{Binding ChangeCommand}">
                    <Rectangle Width="50" Height="15" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{iconPacks:Modern Kind=ArrowLeftRight}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
                <Button Content="Login" FontSize="15" Margin="0" Command="{Binding LoginCommand}"/>
            </StackPanel>
        </Grid>
        <GroupBox Grid.Column="2" Header="Destination Database" mah:ControlsHelper.ContentCharacterCasing="Normal" Margin="5">
            <!-- TODO: Support multiSelect -->
            <TreeView>
                <TreeViewItem Header="{Binding DstName, Mode=TwoWay}" ItemsSource="{Binding DstTables, Mode=TwoWay}"/>
            </TreeView>
        </GroupBox>
    </Grid>
</mah:MetroWindow>
